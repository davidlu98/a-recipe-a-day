<link href="https://fonts.googleapis.com/css?family=Raleway:400,500,600|Roboto" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

		<header class="navbar">
		    <nav style="text-align:right">
		      <% if logged_in? %>
		        <%= link_to "Food Journal", current_user %> |
				<%= link_to "Other Journals", users_path %> |
        		<%= link_to "Settings", edit_user_path(current_user) %> |
		        <%= link_to "Log Out", logout_path, method: :delete %>
		      <% else %>
		        <%= link_to "Log In", login_path %>
		      <% end %>
		    </nav>
		</header>


<div class="container" id="home_container" style="font-family:Roboto; max-width:800px; border-left: 2px solid black; border-right: 2px solid black">
	<div class="main" style="text-align:center">
		<div class="logospace">
			<%= link_to root_path do %>
				<%= image_tag("logo4.png") %>
			<% end %>
		</div>

		<br>

		<% if logged_in? %>

		<div class="row">
		  <% if @errors %>
		    <%= @errors[:message] %>
		  <% else %>
		    <% @recipes.each_slice(3) do |recipes| %>

		    <h1>Welcome, <%= current_user.name %>!</h1>
		    <h1>Today's recipe is...</h1>
		    <br>

		      <div class="col-sm-3" style="float:none; margin: 0 auto; border:3px solid black">
		        <% recipes.each do |recipe| %>
		          <div class="RecipeCard">
		            <div class="row">
		              <div class="col-xs-14">
		                <%= link_to recipe_path(recipe.id) do %>
		                  <%= image_tag recipe.image, class: 'img-responsive'%>
		                <% end %>
		              </div>
		            </div>
		            <div class="row">
		              <div class="col-xs-12 RecipeCard-description">
		                <h4><%= recipe.title %></h4>
		                <div class="Icon-container" style="width:100%">
		                  <div>
		                    <% if recipe.gluten_free %>
		                      <%= image_tag("gluten_free.png") %>
		                    <% end %>

		                    <% if recipe.dairy_free %>
		                      <%= image_tag("dairy_free.png") %>
		                    <% end %>

		                    <% if recipe.vegetarian %>
		                      <%= image_tag("vegetarian.png") %>
		                    <% end %>

		                    <% if recipe.vegan %>
		                      <%= image_tag("vegan.png") %>
		                    <% end %>
		                  </div>
		                  <div>
		                    <%= image_tag("clock.png") %>
		                    <%= recipe.ready_in_minutes %> min
		                  </div>
		                  <br>
		                </div>
		              </div>
		            </div>
		          </div>
		        <% end %>
		      </div>
		    <% end %>
		  <% end %>
		</div>
			<br>
			<a href="./upload" class="btn btn-primary">UPLOAD TO FOOD JOURNAL</a>
		<% else %>

		<div class="container" style="max-width:102%">
		  <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
		    <div class="carousel-inner" role="listbox">
		      <div class="item active">
		        <%= image_tag("food1.jpg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food2.jpg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food3.jpg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food4.jpg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food5.jpg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food9.jpg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food6.jpg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food7.jpg") %>
		      </div>
		       <div class="item">
		        <%= image_tag("food14.jpeg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food10.jpg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food8.jpg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food11.png") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food12.jpg") %>
		      </div>
		      <div class="item">
		        <%= image_tag("food13.jpg") %>
		      </div>
		    </div>
		  </div>
		</div>

			<br>
			<br>
			<br>
			<p>Diversify your dishes!</p>
			<p>Learn new cooking skills!</p>
			<p>Show off your Food Journal!</p>
			<br>
			<br>
			<a href="./signup" class="btn btn-primary" style="width:30%; font-size:150%">GET STARTED</a>
		<% end %>
	</div>
</div>
