			<img class="slides" src="images/image_of_apple.jpg" alt="image of apples">
			<img class="slides" src="images/image_of_apple.jpg" alt="image of apples">
			<img class="slides" src="images/image_of_apple.jpg" alt="image of apples">
		</div>

		<div clas="center">
			<div class="section">
				<button class="light-grey-button" onclick="plusDivs(-1)">< Prev</button>
				<button class="light-grey-button" onclick="plusDivs(1)">Next ></button>
			</div>
		</div> -->

		<% if logged_in? %>

		<div class="row">
		  <div class="col-xs-12">
		  </div>
		</div>
		<div class="row">
		  <% if @errors %>
		    <%= @errors[:message] %>
		  <% else %>
		    <% @recipes.each_slice(3) do |recipes| %>
		      <div class="col-sm-3">
		        <% recipes.each do |recipe| %>
		          <div class="RecipeCard">
		            <div class="row">
		              <div class="col-xs-12">
		                <%= link_to recipe_path(recipe.id) do %>
		                  <%= image_tag recipe.image, class: 'img-responsive' %>
		                <% end %>
		              </div>
		            </div>
		            <div class="row">
		              <div class="col-xs-12 RecipeCard-description">
		                <h4><%= recipe.title %></h4>
		                <div class="Icon-container">
		                  <div>
		                    <% if recipe.gluten_free %>
		                      <i class="Icon Icon--small Icon-glutenFree"></i>
		                    <% end %>

		                    <% if recipe.dairy_free %>
		                      <i class="Icon Icon--small Icon-dairyFree"></i>
		                    <% end %>

		                    <% if recipe.vegetarian %>
		                      <i class="Icon Icon--small Icon-vegetarian"></i>
		                    <% end %>

		                    <% if recipe.vegan %>
		                      <i class="Icon Icon--small Icon-vegan"></i>
		                    <% end %>
		                  </div>
		                  <div>
		                    <i class="Icon Icon--small Icon-like"></i> <span><%= recipe.aggregate_likes %></span>
		                  </div>
		                  <div>
		                    <i class="Icon Icon--small Icon-clock"></i> <%= recipe.ready_in_minutes %> min
		                  </div>
		                </div>
		              </div>
		            </div>
		          </div>
		        <% end %>
		      </div>
		    <% end %>
		  <% end %>
		</div>

			<%= link_to "UPLOAD", upload_path %>

		<% else %>
			<ul>
				<li>Diversify your dishes!</li>
				<li>Learn new cooking skills!</li>
				<li>Show off your Food Journal!</li>
			</ul>

		<% end %>

<!-- 		<%= link_to "GET STARTED", signup_path, class: "btn btn-lg btn-primary" %> -->
	</div>
</div>

