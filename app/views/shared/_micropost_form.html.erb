<div class="row"  style="max-width:600px; margin: 0 auto;">
  <div class="col-md-6 col-md-offset-3" style="margin-left:150px">

  <%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <b><%='Title'%></b>
    <div>
    <%= f.text_field :title, class: 'form-control', placeholder: "Title", :style=>'width:40%', :style=>'margin: 0 0 3px 0'%>
    <div>
    <br>
    <b><%='Description' %></b>
    <div class="field">
      <%= f.text_area :content, class: 'form-control', placeholder: "Share how your dish went!", :style=>'width:40%', :style=>'margin: 0 0 3px 0'%>
    </div>
    <br>
    <span class="picture">
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    </span>
    <br>
    <br>
    <div style="text-align:center">
      <%= f.submit "POST", class: "btn btn-primary", :style=>'cursor:pointer', :style=>'width:40%', :style=>'margin:0 0 3px 0'%>
    </div>
  <% end %>
  </div>
</div>

<br>
<%= link_to "Back to Home Page", root_path, :style=>'cursor:pointer', :style=>'margin: 0 0 3px 0'%>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>

